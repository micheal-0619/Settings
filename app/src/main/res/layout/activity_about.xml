<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_bg"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/layout_tittle_bg" />

        <LinearLayout
            android:id="@+id/view_model"
            android:layout_width="wrap_content"
            android:layout_height="100.0dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="20.0dip"
            android:layout_marginTop="15.0dip"
            android:layout_marginEnd="20.0dip"
            android:background="@drawable/bg_settings"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_model_label"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginStart="40.0dip"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:text="设备型号"
                android:textColor="@color/txt_color"
                android:textSize="28.0sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_model_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="35.0dip"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/txt_color"
                android:textSize="20.0sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_sn"
            android:layout_width="wrap_content"
            android:layout_height="100.0dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="20.0dip"
            android:layout_marginTop="15.0dip"
            android:layout_marginEnd="20.0dip"
            android:background="@drawable/bg_settings"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_sn_label"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginStart="40.0dip"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:text="序列号"
                android:textColor="@color/txt_color"
                android:textSize="28.0sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_sn_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="35.0dip"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/txt_color"
                android:textSize="20.0sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_system_update"
            android:layout_width="wrap_content"
            android:layout_height="100.0dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="20.0dip"
            android:layout_marginTop="15.0dip"
            android:layout_marginEnd="20.0dip"
            android:background="@drawable/bg_settings"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_system_update_label"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginStart="40.0dip"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:text="系统升级"
                android:textColor="@color/txt_color"
                android:textSize="28.0sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="25.0dip"
                android:layout_marginEnd="40.0dip"
                android:background="@drawable/btn_arrow" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>